@import "../variablesStyl/variables.styl"

.arrowBtns
    margin-top: 56px
    &__header
        font-family: Arial, Calibri, sans-serif
        text-transform: uppercase
        font-size: 18px
        font-weight: bold
        letter-spacing: 1px
        text-align: center

.arrows
    margin: 35px auto 0
    display: flex
    justify-content: space-between
    width: 420px
    & button:first-child
        margin-right: 20px

.buttonArr
    position: relative
    width: 50px
    height: 50px
    border-radius: 50%
    border: 3px solid $green
    background-color: $white
    outline: none
    font-size: 30px
    font-weight: bold
    color: $green
    &:not(.buttonArr-condition__disabled):hover
        background-color: $green
        color: $white
        & .leftArrow
            fill: $white
        & .rightArrow
            fill: $white

.leftArrow
    fill: $green
    position: absolute
    top: 10px
    left: 12px

.rightArrow
    fill: $green
    position: absolute
    top: 10px
    left: 15px

.buttonArr-condition__hovered
    background-color: $green
    color: $white
    & .leftArrow
        fill: $white
    & .rightArrow
        fill: $white

.buttonArr-condition__disabled
    color: $white
    background-color: $gray
    border-color: $gray
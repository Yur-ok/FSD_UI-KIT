.main__arrowBtn
    margin-top: 55px

.arrowBtns
    &__header
        CommonFonts()
        margin-bottom: 35px

.arrows-wrapper
    margin: 0 auto
    display: flex
    justify-content: space-between
    width: 60%
    & button:first-child
        margin-right: 20px

.buttonArr
    position: relative
    width: 50px
    height: 50px
    border-radius: 50%
    border: 3px solid $green
    background-color: $white
    outline: none
    font-size: 30px
    font-weight: bold
    color: $green
    &:not(.buttonArr-condition__disabled):hover
        background-color: $green
        color: $white
        & .leftArrow
            fill: $white
        & .rightArrow
            fill: $white

.leftArrow
    fill: $green
    position: absolute
    top: 10px
    left: 12px

.rightArrow
    fill: $green
    position: absolute
    top: 10px
    left: 15px

.buttonArr-condition__hovered
    background-color: $green
    color: $white
    & .leftArrow
        fill: $white
    & .rightArrow
        fill: $white

.buttonArr-condition__disabled
    color: $white
    background-color: $gray
    border-color: $gray
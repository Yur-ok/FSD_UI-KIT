include ../mixinsPug/arrowBtn

section.arrowBtns
    h1.arrowBtns__header Arrow buttons
    .arrows
        .arrow-inactive
            +arrowBtn('left', 'inactive')
            +arrowBtn('right', 'inactive')

        .arrow-disabled
            +arrowBtn('left', 'disabled')
            +arrowBtn('right', 'disabled')

        .arrow-hovered
            +arrowBtn('left', 'hovered')
            +arrowBtn('right', 'hovered')
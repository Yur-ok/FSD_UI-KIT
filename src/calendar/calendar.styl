.calendar__header
    CommonFonts()
    margin-bottom: 24px

.calendar-wrapper
    width: 100%
    height: 430px
    & .current-day
        width: 100%
        height: 109px
        background-color: $orange
        display: flex
        justify-content: center
        align-items: center
        & .date
            font-size: 80px
            color: $white
            font-family: LatoLight

    & .jsCalendar-title-row
        height: 40px

    & .jsCalendar table
        color: #868686
        margin: 0
        box-shadow unset
        font-family: LatoLight

    & .jsCalendar.classic-theme thead
        background-color: $darkOrange

    & .jsCalendar.classic-theme thead .jsCalendar-title-name
        font-size: 24px
        top: -4px

    & .jsCalendar.classic-theme thead .jsCalendar-week-days
        height: 27px
        background-color: $orange
        color: $white
        & th
            text-transform: uppercase
            line-height: 16px
            height: 12px

    & .jsCalendar tbody td.jsCalendar-previous, .jsCalendar tbody td.jsCalendar-next
        color: $white

    & .jsCalendar.classic-theme thead .jsCalendar-nav-left:hover, .jsCalendar.classic-theme thead .jsCalendar-nav-right:hover
        background-color: $orange

    & .jsCalendar.classic-theme tbody td
        height: 39px
        background-color: #f2f2f2
        font-size: 20px
        border-left: 1px solid $white
        border-top: 1px solid $white

    & .jsCalendar tbody td.jsCalendar-current
        background-color: $orange

.today
    width: 100%
    height: 49px
    background-color: $gray
    padding: 15px 0 0 20px
    box-sizing: border-box
    text-transform: uppercase
    font-family: LatoBlack
    font-size: 13px
    font-weight: bold
    color: #868686

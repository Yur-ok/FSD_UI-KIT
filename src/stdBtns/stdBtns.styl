
.stdBtns__header
    font-family: Arial, Calibri, sans-serif
    text-align: center
    margin: 82px 0 0 0
    font-size: 18px
    text-transform: uppercase
    letter-spacing: 1px
    word-spacing: 1px
    font-weight: bold

.buttons
    margin-top: 72px
    display: flex
    flex-direction: column

.buttons > *
    margin: 0 auto

button
    vertical-align: bottom
    margin-right: 24px
    margin-top: 20px

button:nth-child(4)
    margin-right: 0

.pressed button
    margin-top: 0

.button
    border-radius 5%
    text-transform: uppercase
    position: relative
    overflow: hidden

button:after
    content: ''
    display: block
    position: absolute
    left: 50%
    top: 50%
    width: 120px
    height: 120px
    margin-left: -60px
    margin-top: -60px
    background: #3f51b5
    border-radius: 100%
    opacity: .6

    transform: scale(0)

@keyframes ripple
    0%
        transform: scale(0)

    20%
        transform: scale(1)

    100%
        opacity: 0
        transform: scale(1)

button:not(:active):after
    animation: ripple 1s ease-out

/* fixes initial animation run, without user input, on page load.
 */
button:after
    visibility: hidden

button:focus:after
    visibility: visible





.button__small
    width: 78px
    height: 22px
    font-size: 10px
    border-bottom: 2px

.button__big
    width: 118px
    height: 32px
    font-size: 12px
    border-bottom: 3px

.button-color__green
    background-color: #4eb7a8
    border: 1px solid #4eb7a8
    & .button__inactive
        color: #4eb7a8

.button-color__orange
    background-color: #e75735
    border: 1px solid #e75735

.button__pressed
    color: #fff

.button__inactive
    background-color: #fff

.button__hovered
    color: #fff

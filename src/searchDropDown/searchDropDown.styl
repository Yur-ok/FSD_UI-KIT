.searchDD
    width: 50%
    display: flex
    flex-direction: column
    &__header
        CommonFonts()
        padding-right: 20px
        letter-spacing: 0.6px
        margin-bottom: 20px
    &__fields
        display: flex
        flex-direction: column
        width: 288px
        & .search
            margin-bottom: 16px
            height: 28px
            padding-left: 33px
        & .search::after
            background-color: $orange
        & .dropDown
            height: 28px
            padding-left: 33px

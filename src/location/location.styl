.location
    margin-top: 48px
    display: flex
    flex-direction: inherit
    &__header
        CommonFonts()
        margin-bottom: 30px

.location__wrapper
    display: flex
    flex-direction: column
    align-self: center
    width: 85%

.googleMap
    width: 100%
    height: 203px
    & iframe
        width: 100%
        height: 233px

.customMapControl
    position: relative
    display: flex
    align-items: center
    width: 100%
    height: 69px
    padding-left: 29px
    padding-right: 100px
    background-color: $orange
    & .icons
        display: flex
        justify-content: space-between
        width: 67px
        position: absolute
        right: 27px
        & #pin, #myLocation
            cursor: pointer

.customMapControl__text
    display: flex
    align-items: center
    & h2, p
        font-family: LatoLigth
        color: $white
    & h2
        font-family: LatoBlack
        font-size: 28px
        font-weight: 200
        letter-spacing: 2px
        padding-right: 23px
    & p
        font-size: 12.5px
        word-spacing: 4.2px
        text-transform: uppercase

@media screen and (max-width: 500px)
    .customMapControl
        height: auto

    .customMapControl__text
        flex-direction: column

        & h2
            margin-bottom: 0